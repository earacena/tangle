CompileFlags:
  Add: [-Wall, -pedantic, --std=c++20]
  CompilationDatabase: "cmake"
  Diagnostics:
    ClangTidy:
      Add: [modernize*, bugprone*, performance*, readability*, cppcoreguidelines*]
  InlayHints:
    BlockEnd: No
    Designators: Yes
    Enabled: Yes
    ParameterNames: Yes
    DeducedTypes: Yes
    TypeNameLimit: 24

